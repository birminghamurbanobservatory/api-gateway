{
  "$id": "https://api.birminghamurbanobservatory.com/schemas/platform-create-request-body.json",
  "title": "platform-create-request-body",
  "type": "object",
  "x-tags": [
    "platforms"
  ],
  "description": "Permitted platform structure during creation.",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 48,
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "name": {
      "type:": "string",
      "minLength": 1,
      "maxLength": 44
    },
    "description": {
      "type": "string"
    },
    "inDeployment": {
      "type": "string"
    },
    "isHostedBy": {
      "type": "string"
    },
    "static": {
      "type": "boolean",
      "default": true
    },
    "location": {
      "type": "object",
      "properties": {
        "geometry": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Point"
              ]
            },
            "coordinates": {
              "type": "array"
            }
          },
          "required": [
            "type",
            "coordinates"
          ]
        }
      },
      "required": [
        "geometry"
      ]
    }
  },
  "required": [
    "name",
    "inDeployment"
  ]
