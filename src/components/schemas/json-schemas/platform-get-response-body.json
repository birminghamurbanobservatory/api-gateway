    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "@id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 48,
      "minLength": 1
    },
    "@type": {
      "type": "string",
      "const": "Platform"
    },
    "label": {
      "type": "string",
      "minLength": 1,
      "maxLength": 44
    },
    "description": {
      "type": "string"
    },
    "static": {
      "type": "boolean"
    },
    "inDeployment": {
      "type": "string"
    },
    "isHostedBy": {
      "type": "string"
    },
    "ancestorPlatforms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "topPlatform": {
      "type": "string"
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "initialisedFrom": {
      "type": "string"
    },
    "updateLocationWithSensor": {
      "type": "string"
    },
    "passLocationToObservations": {
      "type": "boolean"
    },
    "location": {
      "$ref": "https://api.birminghamurbanobservatory.com/schemas/location.json"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false,
  "required": [
    "@context",
    "@id",
    "@type",
    "label",
    "description",
    "static",
    "createdAt",
    "updatedAt"
  ]
}