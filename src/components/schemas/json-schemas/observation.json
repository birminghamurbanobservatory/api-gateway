{
  "$id": "https://api.birminghamurbanobservatory.com/schemas/observation.json",
  "title": "observation",
  "type": "object",
  "properties": {
    "@id": {
      "type": "string"
    },
    "@type": {
      "type": "string",
      "const": "Observation"
    },
    "madeBySensor": {
      "type": ["string", "object"]
    },
    "hasResult": {
      "type": "object",
      "required": [
        "value"
      ],
      "properties": {
        "value": {
          "type": [
            "string",
            "number",
            "object",
            "boolean"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unit": {
          "type": ["string", "object"]
        }
      }
    },
    "inDeployments": {
      "type": "array",
      "items": {
        "type": ["string", "object"]
      }
    },
    "resultTime": {
      "type": "string",
      "format": "date-time"
    },
    "hasFeatureOfInterest": {
      "type": ["string", "object"]
    },
    "observedProperty": {
      "type": ["string", "object"]
    },
    "aggregation": {
      "type": ["string", "object"]
    },
    "disciplines": {
      "type": "array",
      "items": {
        "type": ["string", "object"]
      }
    },
    "usedProcedures": {
      "type": "array",
      "items": {
        "type": ["string", "object"]
      }
    },
    "location": {
      "$ref": "https://api.birminghamurbanobservatory.com/schemas/location.json"
    },
    "ancestorPlatforms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "inTimeseries": {
      "type": "string",
      "description": "The id of the timeseries this observation belongs to."
    }
  },
  "required": [
    "@id",
    "hasResult",
    "resultTime"
  ]
}