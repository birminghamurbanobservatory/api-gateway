{
  "name": "api-gateway",
  "version": "1.21.7",
  "description": "Serves the public REST API.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "test": "LOGGER_ENABLED=false jest --runInBand --env=node",
    "test-debug": "LOGGER_ENABLED=true LOGGER_FORMAT=terminal LOGGER_LEVEL=debug jest --runInBand --env=node",
    "build": "rm -rf dist && tsc",
    "build:start": "npm run build && npm start",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "docker:build": "docker build -t gcr.io/urban-observatory/api-gateway:$npm_package_version .",
    "docker:push": "docker push gcr.io/urban-observatory/api-gateway:$npm_package_version",
    "dockerise": "npm run build && npm run docker:build && npm run docker:push"
  },
  "author": "Simon Bell",
  "repository": {
    "type": "git",
    "url": "git://github.com/birminghamurbanobservatory/api-gateway.git"
  },
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@mapbox/geojsonhint": "^3.0.0",
    "@types/morgan": "^1.7.36",
    "ajv": "^6.12.0",
    "ajv-merge-patch": "^4.1.0",
    "axios": "^0.19.2",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "capitalize": "^2.0.3",
    "check-types": "^9.0.1",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "ejs": "^3.0.2",
    "event-stream": "github:birminghamurbanobservatory/event-stream#semver:^2.0.0",
    "express": "^4.17.1",
    "joi-to-json": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.6.0",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "node-logger": "github:birminghamurbanobservatory/node-logger#semver:^1.0.0",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
